<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?containerBackgroundColor">

    <ImageView
        android:id="@+id/yat_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/yat_logo_top_margin"
        android:contentDescription="@null"
        android:src="?yatLogoDrawable" />

    <ImageView
        android:id="@+id/background_drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yat_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/page_3_background_top_margin"
        android:contentDescription="@null"
        android:src="?infoPage3BackgroundDrawable" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@id/background_drawable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="138dp"
        android:background="@drawable/page_3_emoji_container_bg"
        android:elevation="?viewElevation"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/fire" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/horn_sign" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/sunglasses" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/fire" />
    </LinearLayout>

    <yat.android.ui.component.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/description_text_view"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/info_title_bottom_margin"
        android:gravity="center"
        android:letterSpacing="0.015"
        android:lineSpacingExtra="6dp"
        android:text="@string/step_3_title"
        android:textColor="?infoTitleColor"
        android:textSize="@dimen/info_title_font_size"
        app:customFont="?infoTitleFont" />

    <yat.android.ui.component.CustomFontTextView
        android:id="@+id/description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/create_new_yat_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/info_description_bottom_margin"
        android:gravity="center"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="6dp"
        android:text="@string/step_3_description"
        android:textColor="@color/x_light_gray"
        android:textSize="@dimen/info_description_font_size"
        app:customFont="?infoDescriptionFont" />

    <yat.android.ui.component.CustomFontButton
        android:id="@+id/create_new_yat_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@id/connect_an_existing_yat_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/primary_button_bg"
        android:text="@string/step_3_create_your_yat"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:customFont="?buttonFont" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/create_new_yat_button"
        android:layout_alignEnd="@id/create_new_yat_button"
        android:layout_alignBottom="@id/create_new_yat_button"
        android:layout_marginEnd="16dp"
        android:contentDescription="@null"
        android:src="?webLinkIconDrawable" />

    <LinearLayout
        android:id="@+id/progress_bar_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignStart="@id/create_new_yat_button"
        android:layout_alignTop="@id/create_new_yat_button"
        android:layout_alignEnd="@id/create_new_yat_button"
        android:layout_alignBottom="@id/create_new_yat_button"
        android:background="@drawable/primary_button_bg"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:visibility="visible" />
    </LinearLayout>

    <yat.android.ui.component.CustomFontButton
        android:id="@+id/connect_an_existing_yat_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/secondary_button_bg"
        android:text="@string/step_3_connect_an_existing_yat"
        android:textAllCaps="false"
        android:textColor="?secondaryButtonTextColor"
        android:textSize="16sp"
        app:customFont="?buttonFont" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/connect_an_existing_yat_button"
        android:layout_alignEnd="@id/connect_an_existing_yat_button"
        android:layout_alignBottom="@id/connect_an_existing_yat_button"
        android:layout_marginEnd="16dp"
        android:contentDescription="@null"
        android:src="?webLinkIconDrawable" />

</RelativeLayout>